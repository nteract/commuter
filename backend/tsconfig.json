{
  "include": ["src/**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2015"],
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "inlineSources": true,
    "types": ["node"]
  }
}
